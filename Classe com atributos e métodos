package pacoteEx2;
public class Produto {
    String nome;
    double preco;
    int estoque;
   
    public void exibirDados(){
        System.out.println("Nome do Produto: " + nome);
        System.out.println("PreÃ§o: " + preco);
        System.out.println("Quantidade em estoque: " + estoque);
    }
    
    public void calcularValorEmEstoque(){
        System.out.println("Valor total do estoque: " + estoque * preco + "\n");
    }
    
    public void aumentarQuantidadeEstoque(){
        estoque = estoque + 10;
        System.out.println("10 unidades acrescentadas ao estoque com sucesso!\n");
    }
}


package pacoteEx2;
public class Principal {
    public static void main(String[] args) {
        Produto produto =  new Produto();
        produto.nome = "Shampoo";
        produto.preco = 30.00;
        produto.estoque = 10;
        
        Produto produto2 = new Produto();
        produto2.nome = "Condicionador";
        produto2.preco = 24.90;
        produto2.estoque = 10;
        
        produto.exibirDados();
        produto.calcularValorEmEstoque();
        produto.aumentarQuantidadeEstoque();
        produto.exibirDados();
        produto.calcularValorEmEstoque();
        
        produto2.exibirDados();
        produto2.calcularValorEmEstoque();
        produto2.aumentarQuantidadeEstoque();
        produto2.exibirDados();
        produto2.calcularValorEmEstoque();
        
         if(produto.preco > produto2.preco){
            System.out.println("Produto mais caro: " + produto.nome);
        } else{
            System.out.println("Produto mais caro: " + produto2.nome);
        }
        
    }
    
}
